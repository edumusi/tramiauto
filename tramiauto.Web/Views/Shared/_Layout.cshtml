<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Tramiauto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="images/LogoIcon.png" alt="Tramiauto" width="50" height="50" /></a>}
                else
                {<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Portal</a>}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <!-- MENU IZQUIERDO INI -->
                    <ul class="navbar-nav ">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="ChangeUser"><i class="fa fa-user"></i> @User.Identity.Name </a> </li>
                            <li> <a asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out"></i> Salir</a></li>
                        }
                        else
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in"></i> Ingresar</a></li>
                        }
                    </ul>
                    <!-- MENU IZQUIERDO FIN -->

                    <!-- MENU DERECHO INI -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a> </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios"     asp-action="Index"><i class="fa fa-users"></i> Usuarios</a> </li>
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Tramites"     asp-action="Index"><i class="fa fa-id-card"></i> Tramites</a> </li>
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="TipoTramites" asp-action="Index"><i class="fa fa-address-card"></i> Tipo de Tramite</a> </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Gestor"))
                        {
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Tramites" asp-action="Index"><i class="fa fa-id-card"></i> Tramites</a> </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Usuario"))
                        {
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Tramites" asp-action="Index"><i class="fa fa-id-card"></i> Mis Tramites</a> </li>
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Automotores" asp-action="Index"><i class="fa fa-automobile"></i> Mis Automotores</a> </li>
                        }
                    </ul>
                    <!-- MENU DERECHO FIN -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Portal Tramiauto - <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-file"></i> Política de Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
